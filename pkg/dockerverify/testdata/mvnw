#!/bin/sh
# Minimal Maven wrapper for testing
if [ "$1" = "-B" ] && [ "$2" = "-ntp" ] && [ "$3" = "package" ] && [ "$4" = "-DskipTests" ]; then
    mkdir -p target
    cat > target/app.jar << 'EOL'
#!/bin/sh
# Self-extracting JAR file
mkdir -p /tmp/app
cat > /tmp/app/Main.java << 'EOF'
import java.io.IOException;
import java.net.InetSocketAddress;
import com.sun.net.httpserver.HttpServer;

public class Main {
    public static void main(String[] args) throws Exception {
        HttpServer server = HttpServer.create(new InetSocketAddress(8080), 0);
        server.createContext("/actuator/health", exchange -> {
            String response = "{\"status\":\"UP\"}";
            exchange.sendResponseHeaders(200, response.length());
            exchange.getResponseBody().write(response.getBytes());
            exchange.getResponseBody().close();
        });
        server.start();
        System.out.println("Application started");
        while (true) {
            Thread.sleep(1000);
        }
    }
}
EOF
cd /tmp/app
javac Main.java
jar cfe /app/app.jar Main Main.class
exec java -jar /app/app.jar
EOL
    chmod +x target/app.jar
    echo "Maven build successful"
    exit 0
else
    echo "Unsupported Maven command"
    exit 1
fi 